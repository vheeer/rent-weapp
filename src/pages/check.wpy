<!-- index.wpy -->
<style>
  .swiper_box swiper image {
    width: 100%;
  }
  .swiper_box swiper {
    height: 180px;
  }
  .shop_box {
    border-bottom: solid 1px #eeeeee;
  }
  .shop_box .wrap {
    display: flex;
    height: 100rpx;
  }
  .shop_box .item {
    font-size: 20rpx;
  }
  .shop_box .item.side {
    width: 150rpx;
    flex-grow: 0;
  }
  .shop_box .item.main {
    flex-grow: 1;
    padding: 0 20rpx 0 20rpx;
    border-right: solid 1px #eeeeee;
  }
  .shop_box .button {
    border: dashed 1px #555555;
  }
  .shop_box .button button {
    border: none;
  }
  .vtitle {
    font-weight: bold;
    font-size: 27rpx;
  }
  .vcontent {
    font-size: 25rpx;
    color: #666666;
  }
  .main {
    padding: 120rpx 0 0 0;
  }
  .scan {
    width: 300rpx;
    height: 300rpx;
    border: solid 2px black;
    border-radius: 9999px;
    padding: 48rpx;
  }
  .price {
    margin: 20rpx 0 0 0;
  }
  .start {
    margin: 40rpx 20rpx 40rpx 20rpx;
    border-radius: 200rpx;
    width: 80%;
    overflow: hidden;
  }
  .start wxc-button button {
    width: 100%;
  }
  wxc-cc {
    position: relative;
  }

</style>
<template>
  <!-- 轮播开始 -->
  <view class="swiper_box">
    <swiper 
      indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}" 
      interval="{{interval}}" 
      duration="{{duration}}"
    >
      <block wx:for="{{imgUrls}}" wx:key="{{key}}">
        <swiper-item>
          <image mode="aspectFill" src="{{item}}" class="slide-image" width="355" height="150"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 轮播结束 -->
  <!-- 主体部分开始 -->
  <view class="main">
    <wxc-cc>
      <!-- 订单详情 -->
      <view class="message">
        <wxc-input type="order_sn" title="编号" value="02060010588"></wxc-input>
        <wxc-input type="price" title="单价" value="1元/小时"></wxc-input>
        <wxc-input type="user" title="使用者" value="使用者"></wxc-input>
        <wxc-input type="shop" title="店铺" value="津南一号店"></wxc-input>
      </view>
    </wxc-cc>
    <!-- 开始使用按钮 -->
    <wxc-cc>
      <view class="start">
        <wxc-button size="large" type="primary">开始使用</wxc-button>
      </view>
    </wxc-cc>
  </view>
  <!-- 主体部分结束 -->

</template>

