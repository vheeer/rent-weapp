  }
  .user .right .info {
    width: 250rpx;
  }
  .user .right .info .nickname {
    border-bottom: solid 1px #444444;
    padding: 0 0 10rpx 0;
  }
  .user .right .info .mobile {
    padding: 10rpx 0 0 0;
