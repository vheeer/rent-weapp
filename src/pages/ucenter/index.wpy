<!-- index.wpy -->
<style lang="less">
  .header .wrap {
    position: absolute;
    height: 200rpx;
    z-index: -1;
    opacity: 0.3;
  }
  .user {
    display: flex;
    height: 200rpx;
  }
  .user .item {
    
  }
  .user .left {
    flex-grow: 0;
